<h1><%= @cocktail.name %></h1>


<% @cocktail.doses.each do |dose| %>
  <p><%= dose.ingredient.name %> amount <%= dose.description %></p>
  <%= link_to "delete", dose_path(dose), method: :delete %>
<% end %>

<h3 id="x">Add ingredients</h3>


<div id= "toggle_form">
<%= render "doses/form", cocktail: @cocktail, dose: Dose.new  %>
</div>
